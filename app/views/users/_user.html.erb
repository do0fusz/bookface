<div class="col-md-3">
  <div class="thumbnail">
    <%= link_to user_path(user.username) do %>
      <%= gravatar_tag user.email, size: 400 %>
      <% end %>
    <div class="caption">
      <h3><%= user.username %></h3>
       <% if current_user %> 
        <%= action_buttons(user) %>
        <% end %>
    </div>
  </div>
</div>